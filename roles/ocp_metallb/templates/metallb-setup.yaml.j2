---
apiVersion: metallb.io/v1beta1
kind: MetalLB
metadata:
  name: metallb
  namespace: {{ ocp_metallb_ns }}
---
apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: {{ ocp_metallb_pool_name }}
  namespace: {{ ocp_metallb_ns }}
spec:
  autoAssign: true
  addresses:
    - {{ ocp_metallb_pool_ips }}
---
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  name: advertise-{{ ocp_metallb_pool_name }}
  namespace: {{ ocp_metallb_ns }}
spec:
  ipAddressPools:
    - {{ ocp_metallb_pool_name }}
